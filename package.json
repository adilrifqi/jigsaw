{
  "name": "jigsaw",
  "displayName": "JIGSAW",
  "description": "Java Visual Debugger with a Customizable View",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jigsaw.helloWorld",
    "onCommand:jigsaw.showReactFlow",
    "onDebugAdapterProtocolTracker:*",
    "onView:stackFrames"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jigsaw.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "jigsaw.showReactFlow",
        "title": "Show JIGSAW View"
      },
      {
        "command": "stackFrames.visualizeFrame",
        "title": "Visualize"
      }
    ],
    "menus": {
      "debug/callstack/context": [
        {
          "command": "stackFrames.visualizeFrame",
          "when": "inDebugMode && debugType == java && callStackItemType == 'stackFrame'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "cgg": "antlr4ts -visitor src/customization/antlr/CustSpec.g4 -o src/customization/antlr/parser"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@types/dagre": "^0.7.48",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "@types/vscode-webview": "^1.57.0",
    "@vscode/debugadapter": "^1.57.0",
    "@vscode/debugadapter-testsupport": "^1.57.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "elkjs": "^0.8.2",
    "react": "^18.2.0",
    "react-contenteditable": "^3.3.6",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.16"
  }
}
